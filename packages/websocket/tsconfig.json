{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "dist",
		"lib": ["ES2022", "DOM"],
		"types": ["bun-types"],
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"baseUrl": "."
	},
	"include": ["src/**/*", "__tests__/**/*"],
	"exclude": ["node_modules"]
}
